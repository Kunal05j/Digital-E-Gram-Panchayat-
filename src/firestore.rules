rules_version = '2';

service cloud.firestore {
    
  match /databases/{database}/documents {

    // Users collection: read own profile; admin can write roles
    match /users/{uid} {
      allow create: if request.auth != null && request.auth.uid == uid;
      allow read: if request.auth != null && (request.auth.uid == uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow update: if request.auth != null && request.auth.uid == uid;
      allow delete: if false;
    }

    // Services: admin only create/update/delete; everyone can read active services
    match /services/{serviceId} {
      allow read: if resource.data.active == true || request.auth != null;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Applications: users can create their apps; owner + staff + admin can read; staff/admin can update status
    match /applications/{appId} {
      allow create: if request.auth != null && request.resource.data.applicantUid == request.auth.uid;
      allow read: if request.auth != null && (
        resource.data.applicantUid == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin']
      );
      allow update: if request.auth != null && (
        // status update by staff/admin
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff','admin'] ||
        // applicant can update their own application only when not submitted/locked
        (request.auth.uid == resource.data.applicantUid && request.resource.data.status == resource.data.status)
      );
      allow delete: if false;
    }

    // Logs: only admin can write/read logs
    match /logs/{logId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

  }
}
